<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.proxiad.plovdev"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.proxiad.plovdev.utils.CircularImageView
        android:id="@+id/imageSpeakerPortrait"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        app:border="true"
        app:shadow="true" />

    <TextView
        android:id="@+id/nameSpeaker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageSpeakerPortrait"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#43b3fb"
        android:textStyle="bold" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_below="@+id/nameSpeaker"
        android:layout_marginBottom="8dp"
        android:background="@android:color/darker_gray"
        android:visibility="visible" />

    <TextView
        android:id="@+id/bioSpeaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separator"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/lectureListTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bioSpeaker"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:text="@string/lecture_list"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#43b3fb"
        android:textStyle="bold" />

</RelativeLayout>