<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <style name="Theme.Plovdevactionbar" parent="@android:style/android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_plovdevactionbar</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Plovdevactionbar</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Plovdevactionbar</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Plovdevactionbar</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Plovdevactionbar</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Plovdevactionbar</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_plovdevactionbar</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_plovdevactionbar</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Plovdevactionbar</item>
        <item name="android:actionBarWidgetTheme">@style/Trick</item>
    </style>

    <style name="ActionBar.Solid.Plovdevactionbar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_plovdevactionbar</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_plovdevactionbar</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_plovdevactionbar</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Plovdevactionbar</item>
    </style>

    <style name="ActionBar.Transparent.Plovdevactionbar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_plovdevactionbar</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Plovdevactionbar</item>
    </style>

    <style name="PopupMenu.Plovdevactionbar" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_plovdevactionbar</item>
    </style>

    <style name="DropDownListView.Plovdevactionbar" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_plovdevactionbar</item>
    </style>

    <style name="ActionBarTabStyle.Plovdevactionbar" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_plovdevactionbar</item>
    </style>

    <style name="DropDownNav.Plovdevactionbar" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_plovdevactionbar</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_plovdevactionbar</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_plovdevactionbar</item>
    </style>

    <style name="ProgressBar.Plovdevactionbar" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_plovdevactionbar</item>
    </style>

    <style name="ActionButton.CloseMode.Plovdevactionbar" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_plovdevactionbar</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Plovdevactionbar.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Plovdevactionbar</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Plovdevactionbar</item>
    </style>

    <style name="Trick" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Plovdevactionbar</item>
    </style>

</resources>